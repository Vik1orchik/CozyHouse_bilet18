<Window x:Class="CozyHouse_bilet18.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CozyHouse_bilet18"
        mc:Ignorable="d"
        Title="Расчет покупки" Height="450" Width="433" Background="#FFCF91DA">
    <Grid Background="#FF6593AB">
        <Label Content="Расчет стоимости покупки" HorizontalAlignment="Left" Margin="85,32,0,0" VerticalAlignment="Top" Foreground="White" FontFamily="Comic Sans MS" FontSize="20"/>
        <Label Content="Выберите вид материала:" HorizontalAlignment="Left" Margin="88,95,0,0" VerticalAlignment="Top" Foreground="White" FontFamily="Comic Sans MS" FontSize="16"/>
        <ComboBox x:Name="typeMaterialCombo" HorizontalAlignment="Left" Margin="89,132,0,0" VerticalAlignment="Top" Width="243"/>
        <Label Content="Ширина (м):" HorizontalAlignment="Left" Margin="88,213,0,0" VerticalAlignment="Top" Foreground="White" FontFamily="Comic Sans MS" FontSize="16"/>
        <Label Content="Высота/длина (м):" HorizontalAlignment="Left" Margin="88,175,0,0" VerticalAlignment="Top" Foreground="White" FontFamily="Comic Sans MS" FontSize="16"/>
        <TextBox x:Name="widthText" HorizontalAlignment="Left" Margin="248,220,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="83" PreviewTextInput="DoubleNum_PreviewTextInput"/>
        <TextBox x:Name="heightText" HorizontalAlignment="Left" Margin="248,184,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="83" PreviewTextInput="DoubleNum_PreviewTextInput"/>
        <Button Content="Оформить квитанцию" HorizontalAlignment="Left" Margin="89,356,0,0" VerticalAlignment="Top" Foreground="White" Background="#FF414BA0" FontFamily="Comic Sans MS" BorderBrush="White" Width="243" Height="25" Click="Button_Click_1"/>
        <Button Content="Рассчитать" HorizontalAlignment="Left" Margin="89,326,0,0" VerticalAlignment="Top" Foreground="White" Background="#FF414BA0" FontFamily="Comic Sans MS" BorderBrush="White" Width="243" Height="25" Click="Button_Click"/>
        <Label x:Name="infMaterialLab" Content="Размер, материал, стоимость" HorizontalAlignment="Left" Margin="88,259,0,0" VerticalAlignment="Top" Foreground="#FF610590" FontFamily="Comic Sans MS" BorderBrush="#00000000" Visibility="Collapsed"/>
    </Grid>
</Window>
